#!/bin/sh
set -eu

CONFIG_DIR="/config"

function print_usage() {
    echo "Usage: $0 [up|down]"
    echo ""
    echo "Commands:"
    echo "  up      Start all Docker Compose services"
    echo "  down    Stop all Docker Compose services"
    echo ""
    exit 1
}

function start_services() {
    echo "ðŸš€ Starting all Docker Compose services..."
    for service_dir in "$CONFIG_DIR"/*/; do
        if [ -f "$service_dir/compose.yaml" ]; then
            service_name=$(basename "$service_dir")
            echo "ðŸ“¦ Starting $service_name..."
            cd "$service_dir" && docker compose up -d
        fi
    done
    echo "âœ… All services started"
}

function stop_services() {
    echo "ðŸ›‘ Stopping all Docker Compose services..."
    for service_dir in "$CONFIG_DIR"/*/; do
        if [ -f "$service_dir/compose.yaml" ]; then
            service_name=$(basename "$service_dir")
            echo "ðŸ“¦ Stopping $service_name..."
            cd "$service_dir" && docker compose down
        fi
    done
    echo "âœ… All services stopped"
}

# Check if command is provided
if [ $# -ne 1 ]; then
    print_usage
fi

# Process command
case "$1" in
    up)
        start_services
        ;;
    down)
        stop_services
        ;;
    *)
        print_usage
        ;;
esac
